<!doctype html>
<html lang="en">
    {{>header}}
  <body>
    <!-- <h1>Hello, world!</h1> -->
    <form action="/register" method="POST">
        <div class="row g-3 mt-1">
            <div class="col">
              <input type="text" class="form-control" placeholder="First name" aria-label="First name" name="firstname">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" name="lastname">
            </div>
          </div>
          <div class="row g-3 mt-1">
            <div class="col">
              <input type="email" class="form-control" placeholder="Your Email" aria-label="First name" name="email">
            </div>
            <div class="form-check col-3">
                <input class="form-check-input" type="radio" name="gender" value="male" id="flexRadioDefault1" checked>
                <label class="form-check-label" for="flexRadioDefault1">
                  <span>male</span>
                </label>
              </div>
              <div class="form-check col-3">
                <input class="form-check-input" type="radio" name="gender" value="female" id="flexRadioDefault2">
                <label class="form-check-label" for="flexRadioDefault2">
                  <span>female</span>
                </label>
              </div>
          </div>
          <div class="row g-3 mt-1">
            <div class="col">
              <input type="text" class="form-control" placeholder="Your Phone" aria-label="First name" name="phone">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Enter Your Age" aria-label="Last name" name="age">
            </div>
          </div>
          <div class="row g-3 mt-1">
            <div class="col">
              <input type="password" class="form-control" placeholder="Password" aria-label="First name" name="password">
            </div>
            <div class="col">
              <input type="password" class="form-control" placeholder="Confirm password" aria-label="Last name" name="confirmpassword">
            </div>
          </div>
          <input type="submit" class="btnRegister" value="register">
    </form>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>